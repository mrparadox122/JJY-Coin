<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/homescreenui">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/Name"
        android:fontFamily="@font/coda"
        android:layout_centerHorizontal="true"
        android:text="Paradox!"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <RelativeLayout
        android:layout_width="234dp"
        android:layout_height="101dp"
        android:background="@drawable/customshapeleft"
        android:layout_below="@+id/Name"
        android:id="@+id/AvalableCoinsRelativeLayout"
        android:elevation="8dp"
        android:layout_marginTop="28dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logoo"
            android:layout_centerVertical="true"
            android:id="@+id/avalablecoininmage"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:elevation="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/avalablecoininmage"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/ibarra_real_nova"
            android:text="Avalable Coins"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="3dp"
            android:id="@+id/AvalableCoinsTextView"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AvalableCoinsTextView"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@+id/avalablecoininmage"
            android:fontFamily="@font/ibarra_real_nova"
            android:text=""
            android:id="@+id/AvalableCoins"
            android:textAlignment="center"
            android:layout_marginBottom="13dp"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="234dp"
        android:layout_height="101dp"
        android:background="@drawable/customshaperight"
        android:layout_below="@+id/AvalableCoinsRelativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp"
        android:id="@+id/CurrentValueRelativeLayout">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logoo"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/currentValueImage"
            android:elevation="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/currentValueImage"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/ibarra_real_nova"
            android:text="CurrentValue"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:id="@+id/CurrentValueTextView"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/CurrentValueTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/currentValueImage"
            android:fontFamily="@font/ibarra_real_nova"
            android:text=""
            android:id="@+id/CurrentValue"
            android:textAlignment="center"
            android:layout_marginBottom="13dp"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="234dp"
        android:layout_height="101dp"
        android:background="@drawable/customshapeleft"
        android:layout_below="@+id/CurrentValueRelativeLayout"
        android:id="@+id/ReffralBounsRelativeLayout"
        android:elevation="8dp"
        android:layout_marginTop="34dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logoo"
            android:layout_centerVertical="true"
            android:id="@+id/ReffralBounsImage"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:elevation="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ReffralBounsImage"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/ibarra_real_nova"
            android:text="Reffral Bouns"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="3dp"
            android:id="@+id/ReffralBounsTextView"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ReffralBounsTextView"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="3dp"
            android:layout_toStartOf="@+id/ReffralBounsImage"
            android:fontFamily="@font/ibarra_real_nova"
            android:text=""
            android:id="@+id/ReffralBouns"
            android:textAlignment="center"
            android:layout_marginBottom="13dp"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="234dp"
        android:layout_height="101dp"
        android:background="@drawable/customshaperight"
        android:layout_below="@+id/ReffralBounsRelativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logoo"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/LastKnownValueImage"
            android:elevation="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/LastKnownValueImage"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/ibarra_real_nova"
            android:text="Referral code."
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:id="@+id/ReffralCodeTextView"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ReffralCodeTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/LastKnownValueImage"
            android:fontFamily="@font/ibarra_real_nova"
            android:text=""
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:id="@+id/reffralcodeHome"
            android:textAlignment="center"
            android:layout_marginBottom="13dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />
    </RelativeLayout>

</RelativeLayout>