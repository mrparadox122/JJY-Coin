<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellCoins"
    android:background="@drawable/recivecoinpage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sell Coins"
        android:textSize="45dp"
        android:id="@+id/SellCoinsTextView"
        android:textColor="@color/black"
        android:fontFamily="@font/coda"
        android:layout_marginTop="@dimen/_95sdp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:background="@drawable/customedittext"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_below="@+id/SellCoinsTextView"
        android:id="@+id/SellBuySellLinearLayout"
        android:layout_marginTop="@dimen/_37sdp"
        android:layout_marginEnd="@dimen/_20sdp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:background="#00000000"
            android:layout_marginStart="8dp"
            android:text="Buy"
            android:textSize="23dp"
            android:id="@+id/buycoin"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:background="@drawable/custombutton"
            android:layout_marginEnd="8dp"
            android:text="Sell"
            android:textSize="23dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textAllCaps="false"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/custombutton"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:id="@+id/YouPayRelativeLayout"
        android:layout_below="@id/SellBuySellLinearLayout"
        android:layout_marginTop="37dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/ibarra_real_nova"
            android:text="YOU PAY"
            android:layout_marginStart="26dp"
            android:id="@+id/YouPayTextView"
            android:layout_marginTop="16dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/YouPayTextView"
            android:layout_alignStart="@+id/YouPayTextView"
            android:layout_alignEnd="@+id/YouPayTextView"
            android:layout_marginTop="1dp"
            android:textAlignment="center"
            android:fontFamily="@font/ibarra_real_nova"
            android:hint="0"
            android:textColorHint="#BFBFBF"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:maxLength="2"
            android:inputType="number"
            android:id="@+id/YouSellCoin"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coin"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/custombutton"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:id="@+id/YouGetRelativeLayout"
        android:layout_below="@id/YouPayRelativeLayout"
        android:layout_marginTop="37dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/ibarra_real_nova"
            android:text="YOU GET"
            android:layout_marginStart="26dp"
            android:id="@+id/YouGetTextView"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/YouGetTextView"
            android:layout_alignStart="@+id/YouGetTextView"
            android:layout_alignEnd="@+id/YouGetTextView"
            android:id="@+id/YouGetSellValue"
            android:layout_marginTop="1dp"
            android:textAlignment="center"
            android:fontFamily="@font/ibarra_real_nova"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="81dp"
            android:layout_height="45dp"
            android:background="@drawable/customedittext"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:text="â‚¹"
            android:textSize="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/YouGetRelativeLayout"
        android:layout_alignStart="@+id/YouGetRelativeLayout"
        android:layout_alignEnd="@+id/YouGetRelativeLayout"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_52sdp"
        android:layout_marginEnd="@dimen/_70sdp"
        android:background="@drawable/custombutton"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="Sell"
        android:textAllCaps="false"
        android:id="@+id/SellcoinButton"
        android:fontFamily="@font/ibarra_real_nova"
        />


</RelativeLayout>