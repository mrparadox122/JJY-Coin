    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logoo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.JJYCoin"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >
        <activity
            android:name=".ui.SellHistory.Sell_History"
            android:exported="false" />
        <activity
            android:name=".ui.BuyHistory.Buy_Histroy"
            android:exported="false" />
        <activity
            android:name=".ui.SendCoinsValue"
            android:exported="false" />
        <activity
            android:name=".SellCoins"
            android:exported="false" />
        <activity
            android:name=".BuyCoin"
            android:exported="false" />
        <activity
            android:name=".SendCoins"
            android:exported="false" />
        <activity
            android:name=".ReceiveCoin"
            android:exported="false" />
        <activity
            android:name=".HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen" />
        <activity
            android:name=".Login"
            android:exported="false" />
        <activity
            android:name=".Create_an_account"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>